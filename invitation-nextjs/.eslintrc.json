{
  "extends": "next/core-web-vitals",
  "overrides": [
    {
      "files": ["**/*.{js,jsx,ts,tsx}"],
      "excludedFiles": [
        "**/pages/api/**/*.{js,jsx,ts,tsx}",
        "**/lib/**"
      ],
      "rules": {
        "no-restricted-imports": [
          "error",
          {
            "paths": [
              {
                "name": "@/lib/prisma",
                "message": "Prisma Client はサーバーサイド専用です。クライアントサイドでは使用しないでください。"
              }
            ]
          }
        ]
      }
    }
  ]
}